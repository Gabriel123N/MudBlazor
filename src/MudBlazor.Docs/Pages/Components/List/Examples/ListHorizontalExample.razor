@namespace MudBlazor.Docs.Examples

<MudPaper Width="300px">
    <MudList Horizontal="true" Clickable="true">
        <MudListItem>
            <MudAvatar>A</MudAvatar>
        </MudListItem>
        <MudListItem>
            <MudAvatar Color="Color.Primary">B</MudAvatar>
        </MudListItem>
        <MudListItem>
            <MudAvatar Color="Color.Info">C</MudAvatar>
        </MudListItem>
        <MudListItem>
            <MudAvatar Color="Color.Success">D</MudAvatar>
        </MudListItem>
        <MudListItem>
            <MudAvatar Color="Color.Error">E</MudAvatar>
        </MudListItem>
        <MudListItem>
            <MudAvatar Color="Color.Warning">F</MudAvatar>
        </MudListItem>
        <MudListItem>
            <MudAvatar Color="Color.Dark">G</MudAvatar>
        </MudListItem>
        <MudListItem Text="Nested list" InitiallyExpanded="false">
            <NestedList>
                <MudListItem>
                    <MudText>Nested</MudText>
                </MudListItem>
            </NestedList>
        </MudListItem>
    </MudList>
</MudPaper>
